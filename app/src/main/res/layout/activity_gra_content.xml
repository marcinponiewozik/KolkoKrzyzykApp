<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_gra"
    tools:context="com.example.o_x.GraActivity"
    android:background="@color/primary_light">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout4"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimaryDark">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:id="@+id/btn0"
                android:src="@drawable/line"
                android:layout_weight="1"
                android:background="@color/primary_light"
                android:layout_marginBottom="5dp"
                android:onClick="wykonajRuch" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:id="@+id/btn1"
                android:src="@drawable/line"
                android:layout_weight="1"
                android:background="@color/primary_light"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:onClick="wykonajRuch" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:id="@+id/btn2"
                android:src="@drawable/line"
                android:layout_weight="1"
                android:background="@color/primary_light"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:onClick="wykonajRuch" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimaryDark"
            android:weightSum="3">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:id="@+id/btn3"
                android:src="@drawable/line"
                android:layout_weight="1"
                android:background="@color/primary_light"
                android:layout_marginBottom="5dp"
                android:onClick="wykonajRuch" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:id="@+id/btn4"
                android:src="@drawable/line"
                android:layout_weight="1"
                android:background="@color/primary_light"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:onClick="wykonajRuch" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:id="@+id/btn5"
                android:src="@drawable/line"
                android:layout_weight="1"
                android:background="@color/primary_light"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:onClick="wykonajRuch" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimaryDark"
            android:weightSum="3">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:id="@+id/btn6"
                android:src="@drawable/line"
                android:layout_weight="1"
                android:background="@color/primary_light"
                android:onClick="wykonajRuch" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:id="@+id/btn7"
                android:src="@drawable/line"
                android:layout_weight="1"
                android:background="@color/primary_light"
                android:layout_marginLeft="5dp"
                android:onClick="wykonajRuch" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:id="@+id/btn8"
                android:src="@drawable/line"
                android:layout_weight="1"
                android:background="@color/primary_light"
                android:layout_marginLeft="5dp"
                android:onClick="wykonajRuch" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Gotowe"
        android:id="@+id/btnGotowe"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:onClick="gotowe"
        android:background="@drawable/color_accent"
        android:layout_marginTop="5dp" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/ivPrzeciwnik"
        android:src="@drawable/user"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/colorPrimary"
        android:onClick="pokazProfil"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/ivGospodarz"
        android:src="@drawable/user"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/colorPrimary"
        android:onClick="pokazProfil"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_below="@+id/ivPrzeciwnik"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="JesteÅ› "
            android:id="@+id/tv5"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivFiguraUzytkownika"
            android:src="@drawable/krzyzyk"
            android:layout_marginLeft="10dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="VS"
        android:id="@+id/textView7"
        android:layout_alignTop="@+id/ivPrzeciwnik"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

</RelativeLayout>
