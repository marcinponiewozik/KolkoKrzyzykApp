<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.o_x.Fragments.NiezalogowanyFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top"
        android:background="@color/primary_light">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ivLogoStare"
            android:src="@drawable/user"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chart"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/ivLogoStare"
            android:layout_margin="10dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/ivLogoStare"
            android:layout_toRightOf="@+id/ivLogoStare"
            android:layout_toEndOf="@+id/ivLogoStare"
            android:layout_above="@+id/chart"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Rozegrane gry: 20"
                android:id="@+id/tvRozegraneGry"
                android:layout_above="@+id/tvRozegraneGry"
                android:layout_alignRight="@+id/tvRozegraneGry"
                android:layout_alignEnd="@+id/tvRozegraneGry"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Ukończone: 19 (90%)"
                android:id="@+id/tvUkonczoneGry"
                android:layout_alignBottom="@+id/ivLogoStare"
                android:layout_toRightOf="@+id/ivLogoStare"
                android:layout_toEndOf="@+id/ivLogoStare"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Liczba punktów: 3280"
                android:id="@+id/tvPunkty"
                android:layout_marginTop="5dp" />
        </LinearLayout>

    </RelativeLayout>
</FrameLayout>
